STT_PROVIDER=api

# Docker/OpenAI URLs (only needed if using 'api' provider)
TTS_BASE_URL=http://localhost:8969/v1
STT_BASE_URL=http://localhost:8969/v1

# Voice settings
TTS_VOICE_DEFAULT=af_bella
TTS_VOICE_PODCAST_HOST=af_bella
TTS_VOICE_PODCAST_GUEST=am_puck

# STT Model (for Docker mode)
STT_MODEL=Systran/faster-whisper-medium.en

# =============================================================================
# APP SETTINGS
# =============================================================================
